.shop {
  display: flex;
  border-bottom: 1px solid #ccc;
  padding: 10rpx 0;
}

.shop image {
  width: 200rpx;
  height: 200rpx;
}

.shop view{
  width: 550rpx;
  display: flex;
  flex-direction: column;
  margin-left: 10rpx;
  position: relative;
}

.shop view text {
  font-size: 32rpx;
  color: #999;
}

.shop view .shopName {
  font-size: 36rpx;
  color: #333;
}

.shop view .score {
  position: absolute;
  right: 10rpx;
  top: 10rpx;
  background-color: #EE523D;
  color: #fff;
  padding: 6rpx;
  border-radius: 6rpx;
}

.tips {
  text-align: center;
  background-color: #ccc;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 32rpx;
}